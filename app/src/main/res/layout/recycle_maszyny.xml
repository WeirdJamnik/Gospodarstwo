<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/relative_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="#C5C5C5">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/ic_maszyny" />

            <TextView
                android:id="@+id/marka"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignTop="@id/imageView2"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/imageView2"
                android:gravity="center|left"
                android:text="Marka"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/model"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignTop="@id/imageView2"
                android:layout_alignBottom="@id/imageView2"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/marka"
                android:gravity="center"
                android:text="Model"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/numer_rejestracji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/marka"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/imageView2"
                android:text="numer_rejestracji"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Przebieg"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/przebieg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Przebieg"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Pojemnosci Zbiornika (L)"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/poj_zbior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Pojemnosci Zbiornika (L)"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Moc Znamionowa (kW/KM)"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/moc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Moc Znamionowa (kW/KM)"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Pojemność Silnika (cm^3)"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/poj_sil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Pojemność Silnika (cm^3"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Masa (kg)"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/masa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Masa"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Rok produkcji"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/rok_prod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Rok produkcji"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Data Wygaśniecia Przegladu"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/rok_przegl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Data"
                    android:textColor="@color/black"
                    android:textSize="25dp" />
            </LinearLayout>

            <Button
                android:id="@+id/update_przebieg_maszyny"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:text="Edytuj datę" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>